<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="EXPLANATION:  This app plays songs that are on the memory of the phone.  This main menu is a static list leading to various methods of finding music.  The app should use the AudioFocus class to manage the player's audio vs. the rest of the phone."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ScrollView
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.android.musicplayer.MainActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@color/colorAccent">
            <TextView
                android:id="@+id/now_playing"
                style="@style/CategoryStyle"
                android:background="?android:attr/selectableItemBackground"
                android:text="Now Playing" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@color/colorPrimary">
            <TextView
                android:id="@+id/recently_played"
                style="@style/CategoryStyle"
                android:background="?android:attr/selectableItemBackground"
                android:text="Recently Played" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@color/colorPrimary">
            <TextView
                android:id="@+id/artists"
                style="@style/CategoryStyle"
                android:background="?android:attr/selectableItemBackground"
                android:text="Artists" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@color/colorPrimary">
            <TextView
                android:id="@+id/albums"
                style="@style/CategoryStyle"
                android:background="?android:attr/selectableItemBackground"
                android:text="Albums" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@color/colorPrimary">
            <TextView
                android:id="@+id/songs"
                style="@style/CategoryStyle"
                android:background="?android:attr/selectableItemBackground"
                android:text="Songs" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@color/colorPrimary">
            <TextView
                android:id="@+id/playlists"
                style="@style/CategoryStyle"
                android:background="?android:attr/selectableItemBackground"
                android:text="Playlists" />
        </FrameLayout>



    </LinearLayout>
</ScrollView>
</LinearLayout>